%table#articles
  %thead
    %tr.header
      %th title
      %th actions
  %tbody
    - @articles.each do |article|
      %tr.body
        %td= link_to article.title, admin_article_path(article)
        %td.actions
          = link_to 'edit', edit_admin_article_path(article)
          = link_to 'delete', admin_article_path(article), :confirm => 'Are you sure?', :method => :delete
