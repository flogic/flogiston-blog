-form_for [:admin, article] do |f|
  .guide
    = link_to 'markdown syntax guide', 'http://daringfireball.net/projects/markdown/syntax', :target => '_blank'
  .field
    %label{ :for => 'article_title' } Title:
    =f.text_field :title
  .field
    %label{ :for => 'article_content' } Content:
    =f.text_area  :content
  .submit= f.submit 'Submit'

-unless article.content.blank?
  #preview
    =render :partial => 'articles/show', :object => article
